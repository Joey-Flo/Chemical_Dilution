#include <gui/pumpsetupscreen_screen/PumpSetupScreenView.hpp>
#include <gui/common/CustomKeyboard.hpp>
#include "device_config.h"
#include <cstdio>
#include <stdlib.h>
#include <cstring>

// This external variable allows the UI to access the main device configuration
extern DeviceConfiguration_t myDeviceConfig;

// --- CHANGE: The constructor is now much cleaner and uses a member initializer list ---
// This is the C++ way to initialize member variables when an object is created.
PumpSetupScreenView::PumpSetupScreenView() :
    pumpToggleButtons { &P1Toggle, &P2Toggle, &P3Toggle, &P4Toggle, &P5Toggle, &P6Toggle, &P7Toggle, &P8Toggle },
    densityTextAreas  { &PumpDensity_1, &PumpDensity_2, &PumpDensity_3, &PumpDensity_4, &PumpDensity_5, &PumpDensity_6, &PumpDensity_7, &PumpDensity_8 },
    densityBuffers    { PumpDensity_1Buffer, PumpDensity_2Buffer, PumpDensity_3Buffer, PumpDensity_4Buffer, PumpDensity_5Buffer, PumpDensity_6Buffer, PumpDensity_7Buffer, PumpDensity_8Buffer },
    densityBufferSizes{ PUMPDENSITY_1_SIZE, PUMPDENSITY_2_SIZE, PUMPDENSITY_3_SIZE, PUMPDENSITY_4_SIZE, PUMPDENSITY_5_SIZE, PUMPDENSITY_6_SIZE, PUMPDENSITY_7_SIZE, PUMPDENSITY_8_SIZE }
{
    // The constructor body only contains one-time setup that doesn't need refreshing.
    keyboard.setPosition(0, 115, 240, 180);
    add(keyboard);
    keyboard.setVisible(false);
}

// --- CHANGE: All UI population logic is now in setupScreen() ---
// This function runs every time the screen is displayed, ensuring the UI always shows fresh data.
void PumpSetupScreenView::setupScreen()
{
    PumpSetupScreenViewBase::setupScreen();

    // Reset keyboard flags every time the screen is entered
    for (int i = 0; i < NUM_PUMPS; ++i) {
        KeyboardCallFlags[i] = 0;
    }

    // Loop 1: Set the initial state for all toggle buttons from the config data
    for (int i = 0; i < NUM_PUMPS; ++i)
    {
        bool is_enabled = (myDeviceConfig.PumpEnable[i] == 1);
        pumpToggleButtons[i]->forceState(is_enabled);
        pumpToggleButtons[i]->invalidate();
    }

    // Loop 2: Set the initial text for all density fields from the config data
    char tempBuffer[10];
    for (int i = 0; i < NUM_PUMPS; ++i)
    {
        snprintf(tempBuffer, 10, "%.2f", myDeviceConfig.PumpDensity[i]);
        Unicode::strncpy(densityBuffers[i], tempBuffer, densityBufferSizes[i]);
        densityTextAreas[i]->invalidate();
    }
}

void PumpSetupScreenView::tearDownScreen()
{
    PumpSetupScreenViewBase::tearDownScreen();
}

void PumpSetupScreenView::HandleKeyboard(int8_t index) {
    keyboard.setVisible(true);
    keyboard.invalidate();
    KeyboardExtras.setVisible(true);
    KeyboardExtras.invalidate();

    for (int i = 0; i < NUM_PUMPS; i++) {
        KeyboardCallFlags[i] = (i == (index - 1)) ? 1 : 0;
    }
}

/*
 * ===================================================================================
 * --- CHANGE: The 16 old P#...() functions have been deleted. ---
 * They are replaced by the two new, consolidated handlers below.
 * ===================================================================================
 */

void PumpSetupScreenView::densityFieldClicked(int8_t index)
{
    // This single handler is called by all 8 text fields.
    // It simply calls our helper function to show the keyboard.
    HandleKeyboard(index);
}

void PumpSetupScreenView::pumpToggledHandler(int8_t index)
{
    // This single handler is called by all 8 toggle buttons.
    int array_index = index - 1;

    // Get the button's new on/off state
    bool new_state = pumpToggleButtons[array_index]->getState();

    // Update the configuration data in RAM
    myDeviceConfig.PumpEnable[array_index] = new_state ? 1 : 0;

    // Save the entire configuration to flash to make the change persistent
    #ifndef SIMULATOR
        Config_Save(&myDeviceConfig);
    #endif
}


// --- CHANGE: The EnterPressed function no longer needs to define its own static arrays. ---
// It now uses the member variable arrays we initialized in the constructor.
void PumpSetupScreenView::EnterPressed()
{
    keyboard.setVisible(false);
    keyboard.invalidate();
    KeyboardExtras.setVisible(false);
    KeyboardExtras.invalidate();

    bool config_was_changed = false;

    for (int i = 0; i < NUM_PUMPS; ++i)
    {
        if (KeyboardCallFlags[i] == 1)
        {
            // --- This block is functionally the same, but now uses member arrays ---
            char utf8_buffer[20];
            memset(utf8_buffer, 0, 20);
            Unicode::toUTF8(keyboard.getBuffer(), (uint8_t*)utf8_buffer, 20);

            char* end_ptr;
            float new_value = strtof(utf8_buffer, &end_ptr);

            if (new_value > 3.0f) { new_value = 3.0f; }
            if (new_value < 0.1f) { new_value = 0.1f; }

            if (*end_ptr == '\0' && end_ptr != utf8_buffer)
            {
                myDeviceConfig.PumpDensity[i] = new_value;
                config_was_changed = true;
            }

            KeyboardCallFlags[i] = 0;

            char tempBuffer[10];
            snprintf(tempBuffer, 10, "%.2f", myDeviceConfig.PumpDensity[i]);
            Unicode::strncpy(densityBuffers[i], tempBuffer, densityBufferSizes[i]);
            densityTextAreas[i]->invalidate();

            break;
        }
    }

    keyboard.clearBuffer();

    if (config_was_changed)
    {
        #ifndef SIMULATOR
            Config_Save(&myDeviceConfig);
        #endif
    }
}


void PumpSetupScreenView::ExitPressed()
{
    keyboard.setVisible(false);
    keyboard.invalidate();
    KeyboardExtras.setVisible(false);
    KeyboardExtras.invalidate();
    keyboard.clearBuffer();
}
