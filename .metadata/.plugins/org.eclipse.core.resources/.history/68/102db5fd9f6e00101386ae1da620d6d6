#ifndef MODEL_HPP
#define MODEL_HPP

class ModelListener;

class Model
{
public:

    int8_t getPumpEnableState(int8_t index);
    void setPumpEnableState(int8_t index, bool is_enabled);

    Model();

    void bind(ModelListener* listener)
    {
        modelListener = listener;
    }

    void tick();
protected:
    ModelListener* modelListener;
};

#endif // MODEL_HPP
